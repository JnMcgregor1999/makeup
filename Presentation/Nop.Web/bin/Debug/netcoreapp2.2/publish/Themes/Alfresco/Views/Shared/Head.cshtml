@using Nop.Core

@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;

    var userAgent = Url.ActionContext.HttpContext.Request.Headers["User-Agent"];
    var isIe9 = false;
    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().ToLower().IndexOf("MSIE 9.0", StringComparison.InvariantCultureIgnoreCase) > 0)
    {
        isIe9 = true;
    }

    if (isIe9)
    {
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/ie9-fix.css");
    }

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/1024.rtl.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/mobile.rtl.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/footable.rtl.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/1024.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/mobile.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/footable.css");
        Html.AppendCssFileParts("~/Themes/Alfresco/Content/css/styles.css");
    }

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Alfresco/Content/Scripts/Alfresco.js");
}